{
	"schema": {
    "type": "object",
    "title": "Usu√°rios",
    "required": ["ID_GROUP_USER", "TMP_GROUP_USER", "NAME", "LOGIN", "PASSWORD", "EMAIL", "MOBILE", "ACTIVE"],
    "properties": {
	    	"ID_GROUP_USER": {
	    		"title": "Grupo", 
				"type": "number",
     			"format": "uiselect"
			}, 
	    	"TMP_GROUP_USER": {
	    		"title": "Grupo Users", 
	    		"type": "string"
	    	}, 
	    	"NAME": {
	    		"title": "Nome", 
	    		"type": "string"
	    	}, 
	    	"LOGIN": {
	    		"title": "Login", 
	    		"type": "string"
	    	}, 
	    	"PASSWORD": {
	    		"title": "Senha", 
	    		"type": "string"
	    	},
	    	"EMAIL": {
	    		"title": "Email",
	    		"type": "string", 
	    		"pattern": "^\\S+@\\S+$"
	    	}, 
	    	"MOBILE": {
	    		"title": "Celular 2", 
	    		"type": "string",
				"format": "br-phone"
	    	}, 
	    	"ACTIVE": {
	    		"title": "Ativo", 
	    		"type": "boolean", 
	    		"default": true
	    	}
	    }
	},
	"form": [
		{
			"key": "ID_GROUP_USER", 
			"type": "select",
			"onChange": "ctrl.groupUserOnChange(modelValue,form,ctrl.entity,'TMP_GROUP_USER')",
			"titleMap": [
				{"value": 10000000000000, "name": "Administrador"}, 
				{"value": 10000000000001, "name": "Teste de Grupo"}, 
				{"value": 10000000000002, "name": "Teste de Grupo 2"}, 
				{"value": 10000000000004, "name": "Teste de Grupo 3"}
			]
		},
		{
			"key": "TMP_GROUP_USER", 
			"type": "text", 
			"title": false
		},
		{
			"key": "NAME",
			"type": "text"
		},
		{
			"type": "section",
			"htmlClass": "row",
			"items": [
				{
					"key": "LOGIN", 
					"type": "text", 
					"htmlClass": "col-xs-6"
				}, 
				{
					"key": "PASSWORD", 
					"type": "password", 
					"htmlClass": "col-xs-6"
				}
			]
		}, 
		{
			"type": "section",
			"htmlClass": "row",
			"items": [
				{
					"key": "EMAIL", 
					"type": "text", 
					"htmlClass": "col-xs-6"
				}, 
				{
					"key": "MOBILE", 
					"type": "text", 
					"htmlClass": "col-xs-6"
				}
			]
		},
		{
			"key": "ACTIVE",
			"type": "checkbox"
		}
	],
	"columnDefs": [
		{
			"displayName": "",
			"field": "edit", 
			"name": "edit",
			"cellTemplate": "app/views/edit-button.html",
			"width": 34
		},
		{
			"displayName": "Grupo", 
			"field": "TMP_GROUP_USER"
		}, 
		{
			"displayName": "Nome", 
			"field": "NAME"
		}, 
		{
			"displayName": "Login", 
			"field": "LOGIN"
		}, 
		{
			"displayName": "Email", 
			"field": "EMAIL"
		}, 
		{
			"displayName": "Celular", 
			"field": "MOBILE"
		}, 
		{
			"displayName": "Ativo", 
			"field": "ACTIVE", 
			"cellTemplate": "<div class='ui-grid-cell-contents ui-grid-vcenter'><i class=\"fa {{row.entity.ACTIVE ? 'fa-check' : '' }}\"></i></div>", 
			"width": 70
		},
		{
			"displayName": "", 
			"field": "delete", 
			"name": "delete", 
			"cellTemplate": "app/views/delete-button.html",
			"width": 34
		}
	]
}